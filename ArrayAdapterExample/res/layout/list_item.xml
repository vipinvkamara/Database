<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/corner"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.imrokraft.arrayadapterexample.MainActivity" >

    <ImageView
        android:id="@+id/imageView_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="TODO"
        android:src="@drawable/hh" />

    <TextView
        android:id="@+id/txtview_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_photo"
        android:layout_alignLeft="@+id/txtview_name"
        android:layout_alignRight="@+id/txtview_name"
        android:layout_below="@+id/txtview_name"
        android:textColor="#0000ff" />

    <TextView
        android:id="@+id/txtview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_photo"
        android:layout_toLeftOf="@+id/textView1"
        android:layout_toRightOf="@+id/imageView_photo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtview_email"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/txtview_name"
        android:clickable="true"
        android:textColor="#DF8EFF" />

</RelativeLayout>